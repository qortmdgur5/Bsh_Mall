    <!-- navermail설정 -->
    <bean id="mailSender" class="org.springframework.mail.javamail.JavaMailSenderImpl"> 
     <property name="host" value="smtp.naver.com"/> <!-- 메일서버 호스트 -->
     <property name="port" value="587"/> <!-- 메일서버 포트번호 -->
